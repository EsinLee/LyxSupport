<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg_gradual_white75_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bgimg_gradual_white75_vertical_mid"
        android:orientation="horizontal"
        android:weightSum="15">

        <ImageView
            android:id="@+id/iv_fold_actdatabasedictionary_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:alpha="50"
            android:cropToPadding="true"
            android:padding="9dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_arrow_down" />

        <Button
            android:id="@+id/bt_fold_driverplan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_border_c"
            android:text="派  車  預  劃"
            android:textColor="@color/colorModeDarkTitle"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_fold_actdatabasedictionary_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:alpha="50"
            android:cropToPadding="true"
            android:padding="9dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_input_actdispatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_c"
        android:divider="@drawable/shape_linearlayout_divider_a"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_a_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_dateday_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgimg_gradual_white75_horizontal_mid"
                    android:ems="10"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="點此設定日期"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_search_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@drawable/shape_border_c"
                    android:text="搜尋"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_b_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_event_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_c_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_area_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_area_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_f_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_car_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_car_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_d_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_conductor_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_conductor_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/page_forwork_databasedriverplan_colum_title_button_e_zh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_driver_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorModeDarkTitle"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_driver_database_driverplan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center"
                android:text="其他"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_elseinfo_database_driverplan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_modify_database_driverplan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_d"
                android:text="修改"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_clear_database_driverplan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_d"
                android:text="清空顯示"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_create_database_driverplan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_d"
                android:text="新增"
                android:textColor="@color/colorModeDarkTitle"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_main_databasedriverplan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_border_c" />

</LinearLayout>